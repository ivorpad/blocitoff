<div class="row">
  <div class="form-group col-md-8">
    <%= form_for [@user, @item] do |f| %>

    <% if @item.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are
        <%= pluralize(@item.errors.count, "error") %>.</h4>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= form_group_tag(@item.errors[:name]) do %>
    <h4><%= f.label :name, 'Todo' %></h4>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Press return to create an item' %>
    <% end %>
    <%= f.submit 'Create item', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
